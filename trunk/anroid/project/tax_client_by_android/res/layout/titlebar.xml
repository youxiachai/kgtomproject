<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/lyTitleBar"
	style="@style/titlebar_background">

    <Button
        android:id="@id/titleBack"
        android:layout_width="74px"
        android:layout_height="65px"
        android:layout_alignParentLeft="true"
        android:background="@drawable/title_back"     
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:text="@string/back"
        android:textColor="#ff242e38"
        android:textSize="11.0sp" />

    <Button
        android:id="@id/titleSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:text="@string/query"
        android:textColor="#ff242e38"
         android:background="@drawable/title_home"
        android:textSize="11.0sp"
        android:visibility="visible" />

    <TextView
        android:id="@id/titleText"
        android:layout_width="205.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/titleSave"
        android:layout_toRightOf="@id/titleBack"
        android:layout_weight="1.0"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/header_title"
        android:textColor="#ff000000"
        android:textSize="18.0dip" />

</RelativeLayout>